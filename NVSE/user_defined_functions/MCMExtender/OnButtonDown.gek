int	iButtonID

begin function {int iButtonID}
	if eval GetUIFloatAlt "StartMenu\MCM\_Menu" != 1 || GetActiveMenuMode != 1013
		return
	elseif eval GetUIFloatAlt "StartMenu/MCM/MCM_Scale/visible"
		if eval iButtonID < 4
			return
		endif
		PlaySound UIMenuPrevNext 1
	elseif eval GetUIFloatAlt "StartMenu/MCM/MCM_List/visible" && iButtonID > 3
		return
	else
		PlaySound UIMenuFocus 1
	endif
	Goo1.AuxTimerStart "*MCMExt_QBut" 0.5 13
	Goo1.AuxVarSetFlt "*MCMExt_QBut" iButtonID
end