<!-- MCM Extender -->
<_MCMExt+Menu> 0 </_MCMExt+Menu>
<_MCMExt+Open> 0 </_MCMExt+Open>
<_MCMExt+Search> 0 </_MCMExt+Search>
<_MCMExt+Version> <copy src="sibling(HUDMainMenu)" trait="_MCMExt+Version"/></_MCMExt+Version>
<_MCMExt+VersionStr> <copy src="sibling(HUDMainMenu)" trait="_MCMExt+VersionStr"/> </_MCMExt+VersionStr>
<_MCMExt+Systemcolor> <copy src="child(NOGLOW_BRANCH)" trait="systemcolor"/> </_MCMExt+Systemcolor>
<_MCMExt+Font>
	<copy> 3 </copy>
	<onlyifnot src="child(MCM)" trait="_dUI" />
</_MCMExt+Font>

<!-- Game -->
<_controller> <copy src="globals()" trait="_Has360Controller"/> </_controller>
<_screen_width> <copy src="screen()" trait="width" /> </_screen_width>
<_screen_height> <copy src="screen()" trait="height" /> </_screen_height>