<!-- MCM Extender traits -->
<_MCMExt+DecimalColor> 3067647 </_MCMExt+DecimalColor>
<_MCMExt+Systemcolor> <copy src="io()" trait="_MCMExt+Systemcolor" /> </_MCMExt+Systemcolor>
<_MCMExt+Red>
	<copy src="me()" trait="_MCMExt+DecimalColor" />
	<shr> 16 </shr>
	<land> 255 </land>
</_MCMExt+Red>
<_MCMExt+Green>
	<copy src="me()" trait="_MCMExt+DecimalColor" />
	<shr> 8 </shr>
	<land> 255 </land>
</_MCMExt+Green>
<_MCMExt+Blue>
	<copy src="me()" trait="_MCMExt+DecimalColor" />
	<land> 255 </land>
</_MCMExt+Blue>
<_MCMExt+Brightness>
	<copy> 65 </copy>
	<onlyifnot src="me()" trait="_type" />
	<add> 190 </add>
	<max>
		<copy> 320 </copy>
		<onlyif src="me()" trait="_target" />
	</max>
	<div src="me()" trait="_alpha" />
	<mul src="me()" trait="_brightnessMul" />
</_MCMExt+Brightness>
<_MCMExt+Font> <copy src="MCM_Font" trait="_Options" /> </_MCMExt+Font>
<_brightnessMul> 1 </_brightnessMul>

<mouseoversound> UIMenuFocus </mouseoversound>
<_target>
	<copy src="me()" trait="mouseover" />
	<or>
		<copy src="MCM" trait="_AltInput" />
		<and>
			<copy src="MCM" trait="_TargetOption" />
			<eq src="me()" trait="_optionID" />
		</and>
	</or>
	<and src="me()" trait="_type" />
</_target>
<_alpha>
	<copy> -1.5 </copy>
	<onlyif>
		<not src="MCM_Options" trait="_selected" />
		<or>
			<copy src="MCM_Options" trait="_selected" />
			<eq src="me()" trait="_OptionID" />
		</or>
		<and>
			<copy src="me()" trait="_enable" />
			<eq> 1 </eq>
		</and>
	</onlyif>
	<add> 2.5 </add>
</_alpha>

<image name="MCMExtImage">
	<visible> 0 </visible>
	<alpha> 255 </alpha>
	<depth> 12 </depth>
	<height> 0 </height>
	<width> 0 </width>
	<x> 0 </x>
	<y> 0 </y>
	<zoom> -1 </zoom>
	<systemcolor> 0 </systemcolor>
	<filename> Interface\Shared\empty.dds </filename>
</image>